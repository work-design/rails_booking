<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to t('event.admin.events.index.title'), admin_events_path %></li>
    <li><%= @event.title %></li>
    <li class="is-active"><%= t('.title') %></li>
  </ul>
<% end %>

<%= render 'nav_event' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Crowd.human_attribute_name(:name) %></th>
      <th><%= EventCrowd.human_attribute_name(:members) %></th>
      <th><%= EventCrowd.human_attribute_name(:teacher_id) %></th>
      <th>
        <%= EventCrowd.human_attribute_name(:room_id) %>
        <%= link_to admin_rooms_path, aria: { label: '教室设置' }, target: '_blank' do %>
          <i class="fas fa-cog"></i>
        <% end %>
      </th>
      <th>
        <%= link_to new_admin_event_event_crowd_path(@event), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @event_crowds.each do |event_crowd| %>
  <tr>
    <td><%= event_crowd.crowd.name %></td>
    <td>
      <%= render partial: 'crowd_member', locals: { event_crowd: event_crowd } %>
    </td>
    <td>
      <%= link_to edit_admin_event_event_crowd_path(@event, event_crowd, item: 'teacher'), aria: { label: '设置老师' }, remote: true, class: 'button is-small is-rounded is-light' do %>
        <i class="green male icon"></i>
      <% end %>
      <%= event_crowd.teacher&.name %>
    </td>
    <td>
      <%= link_to edit_admin_event_event_crowd_path(@event, event_crowd, item: 'room'), aria: { label: '设置教室' }, remote: true, class: 'button is-small is-rounded is-light' do %>
        <i class="fas fa-building"></i>
      <% end %>
      <%= event_crowd.room&.name %>
    </td>
    <td>

    </td>
  </tr>
  <% end %>
  </tbody>
</table>
