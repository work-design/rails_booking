<% content_for :breadcrumb do %>
  <%= render 'breadcrumb' %>
<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Crowd.human_attribute_name(:name) %></th>
      <th><%= Crowd.human_attribute_name(:crowd_members_count) %></th>
      <th>
        <%= link_to new_admin_crowd_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @crowds.each do |crowd| %>
    <tr>
      <td>
        <%= image_tag crowd.logo, class: 'ui avatar image' if crowd.logo.present? %>
        <%= crowd.name %>
      </td>
      <td><%= crowd.crowd_members_count %></td>
      <td>
        <%= link_to admin_crowd_path(crowd), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light', remote: true do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_crowd_path(crowd), aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_crowd_path(crowd), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @crowds %>
