<table class="as-search">
  <tr>
    <th><%= Event.human_attribute_name(:type) %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:type]), class: active_params(type: '', active_class: 'button is-info', item_class: 'button is-light') %>
      <% Event.options_i18n(:type).each do |text, type| %>
        <%= link_to text, filter_params(type: type), class: active_params(type: type, active_class: 'button is-info', item_class: 'button is-light') %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th><%= link_to Event.human_attribute_name(:event_taxon_id), admin_event_taxons_path %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:event_taxon_id]), class: active_params(event_taxon_id: '', active_class: 'button is-info', item_class: 'button is-light') %>
      <% @event_taxons.each do |taxon| %>
        <%= link_to taxon.name, filter_params(event_taxon_id: taxon.id), class: active_params(event_taxon_id: taxon.id, active_class: 'button is-info', item_class: 'button is-light') %>
      <% end %>
      <%= link_to new_admin_event_taxon_path, aria: { label: t('event.admin.event_taxons.new.title') }, remote: true, class: 'button is-rounded is-light' do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </td>
  </tr>
</table>

