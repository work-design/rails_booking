<%= form_with theme: 'search', model: Event.new(params.permit(:title)) do |f| %>
  <div class="fields">
    <%= f.text_field :title %>
    <%= f.submit %>
    <%= link_to t('.clear'), filter_params(except: [:title]), class: 'ui button' %>
  </div>
<% end %>
<div class="ui divider"></div>
<dl>
  <dt><%= Event.human_attribute_name(:type) %></dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:type]), class: active_params(type: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% Event.options_i18n(:type).each do |text, type| %>
      <%= link_to text, filter_params(type: type), class: active_params(type: type, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
  </dd>
</dl>
<dl>
  <dt><%= link_to Event.human_attribute_name(:event_taxon_id), admin_event_taxons_path %></dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:event_taxon_id]), class: active_params(event_taxon_id: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% @event_taxons.each do |taxon| %>
      <%= link_to taxon.name, filter_params(event_taxon_id: taxon.id), class: active_params(event_taxon_id: taxon.id, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
    <%= link_to new_admin_event_taxon_path, data: { tooltip: t('event.admin.event_taxons.new.title') }, remote: true, class: 'ui mini circular icon button' do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </dd>
</dl>
