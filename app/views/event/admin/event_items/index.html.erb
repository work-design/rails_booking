<% content_for :breadcrumb do %>
  <div class="ui basic segment breadcrumb">
    <%= link_to t('event.admin.events.index.title'), admin_events_path, class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <div class="section"><%= @event.name %></div>
    <i class="fas fa-angle-right divider"></i>
    <div class="active section"><%= t('.title') %></div>
  </div>
<% end %>

<%= render 'nav_event' %>
<%= render 'filter' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= EventItem.human_attribute_name(:name) %></th>
      <th><%= EventItem.human_attribute_name(:videos) %></th>
      <th><%= EventItem.human_attribute_name(:documents) %></th>
      <th><%= EventItem.human_attribute_name(:author_id) %></th>
      <th>
        <%= link_to new_admin_event_event_item_path(@event), class: 'ui teal button', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @event_items.each do |event_item| %>
    <tr>
      <td><%= event_item.name %></td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: event_item.videos %>
      </td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: event_item.documents %>
      </td>
      <td><%= event_item.author&.name %></td>
      <td>
        <%= link_to admin_event_event_item_path(@event, event_item), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_event_event_item_path(@event, event_item), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_event_event_item_path(@event, event_item), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @event_items %>
