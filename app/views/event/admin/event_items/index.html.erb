<% content_for :breadcrumb do %>
  <div class="breadcrumb">
    <ul>
      <li><%= link_to t('event.admin.events.index.title'), admin_events_path %></li>
      <li><%= @event.name %></li>
      <li class="is-active"><%= t('.title') %></li>
    </ul>
  </div>
<% end %>

<%= render 'nav_event' %>
<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= EventItem.human_attribute_name(:name) %></th>
      <th><%= EventItem.human_attribute_name(:videos) %></th>
      <th><%= EventItem.human_attribute_name(:documents) %></th>
      <th><%= EventItem.human_attribute_name(:author_id) %></th>
      <th>
        <%= link_to new_admin_event_event_item_path(@event), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @event_items.each do |event_item| %>
    <tr>
      <td><%= event_item.name %></td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: event_item.videos %>
      </td>
      <td>
        <%= render 'active_storage_ext/attachments/list', target: event_item.documents %>
      </td>
      <td><%= event_item.author&.name %></td>
      <td>
        <%= link_to admin_event_event_item_path(@event, event_item), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_event_event_item_path(@event, event_item), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_event_event_item_path(@event, event_item), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @event_items %>
