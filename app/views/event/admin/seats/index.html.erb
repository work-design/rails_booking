<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Seat.human_attribute_name(:name) %></th>
      <th><%= Seat.human_attribute_name(:max_members) %></th>
      <th><%= Seat.human_attribute_name(:min_members) %></th>
      <th>
        <%= link_to new_admin_place_seat_path(@place), remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @seats.each do |seat| %>
    <tr>
      <td><%= seat.name %></td>
      <td><%= seat.max_members %></td>
      <td><%= seat.min_members %></td>
      <td>
        <%= link_to admin_place_seat_path(@place, seat), aria: { label: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_place_seat_path(@place, seat), aria: { label: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_place_seat_path(@place, seat), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @seats %>
