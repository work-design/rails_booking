<div class="ui top attached segment">
  <%= render 'filter' %>
</div>>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Booking.human_attribute_name(:id) %></th>
      <th><%= Booking.human_attribute_name(:booking_on) %></th>
      <th><%= Booking.human_attribute_name(:time_item_id) %></th>
      <th><%= Booking.human_attribute_name(:place_id) %></th>
      <th>
        <%= link_to new_time_booking_path(params[:booked_type], params[:booked_id]), class: 'ui mini primary button', remote: true do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @time_bookings.each do |time_booking| %>
    <tr>
      <td><%= time_booking.id %></td>
      <td><%= time_booking.booking_on %></td>
      <td>
        <span class="ui label"><%= time_booking.time_item.start_at.to_s(:time) %></span>
        <i class="yellow arrow right icon"></i>
        <span class="ui label"><%= time_booking.time_item.finish_at.to_s(:time) %></span>
      </td>
      <td><%= time_booking.place_id %></td>
      <td>
        <%= link_to edit_time_booking_path(params[:booked_type], params[:booked_id], time_booking), aria: { label: t('.edit') }, class: 'ui mini circular icon button', remote: true do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to time_booking_path(params[:booked_type], params[:booked_id], time_booking), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @time_bookings %>
