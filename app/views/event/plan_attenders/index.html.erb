<% content_for :breadcrumb do %>
  <div class="ui basic segment breadcrumb">
    <%= link_to t('edu.admin.courses.index.title'), admin_courses_path, class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <%= link_to @plan_item.course.title, admin_course_path(@plan_item.course_id), class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <%= link_to @plan_item.crowd.name, admin_course_course_crowds_path(@plan_item.course_id) %>
    <i class="fas fa-angle-right divider"></i>
    <%= link_to t('edu.admin.course_plans.index.title'), time_plans_path(@plan_item.plan_type, @plan_item.plan_id), class: 'section' %>
    <i class="fas fa-angle-right divider"></i>
    <div class="section"><%= t('edu.admin.lesson_students.index.title') %></div>
  </div>
<% end %>

<table class="ui very basic large table">
  <tr>
    <td class="right aligned"><%= PlanItem.human_attribute_name(:qrcode) %></td>
    <td>
      <% if @plan_item.wechat_response %>
        <%= image_tag @plan_item.qrcode_url, class: 'ui small image' %>
      <% else %>
        <%= link_to qrcode_plan_item_path(@plan_item.plan_type, @plan_item.plan_id, @plan_item), method: :patch, data: { tooltip: t('.qrcode') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-qrcode"></i>
        <% end %>
      <% end %>
    </td>
  </tr>
</table>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= PlanAttender.human_attribute_name(:attender_id) %></th>
      <th><%= PlanAttender.human_attribute_name(:state) %></th>
      <th><%= PlanAttender.human_attribute_name(:created_at) %></th>
      <th>
        <%= PlanAttender.human_attribute_name(:attended) %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @course_students.each do |course_student| %>
    <tr>
      <td><%= course_student.student.real_name %></td>
      <td><%= course_student.state %></td>
      <td><time><%= course_student.created_at.to_s(:rfc822) %></time></td>
      <td>
        <div class="ui toggle checkbox">
          <% if @plan_item.students.include?("#{course_student.student_type}_#{course_student.student_id}") %>
            <%= check_box_tag :course_student_id, course_student.id, true, data: { method: :delete, remote: true, url: plan_item_plan_attenders_path(@plan_item), submit: true }, id: nil %>
          <% else %>
            <%= check_box_tag :course_student_id, course_student.id, false, data: { method: :post, remote: true, url: plan_item_plan_attenders_path(@plan_item), submit: true }, id: nil %>
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @course_students %>
