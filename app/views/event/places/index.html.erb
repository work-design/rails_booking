<div class="ui segment">
  <%= render 'filter' %>
</div>

<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui segment items">
      <% @places.each do |place| %>
        <div class="item">
          <div class="avatar image">
          </div>

          <div class="content">
            <%= link_to place.name, place_path(place) %>
            <p><%= place.description %></p>
            <%= link_to '加入购物车', my_trade_items_path(good_id: place.id, good_type: place.class_name), method: :post, class: 'ui mini button' %>
          </div>
        </div>
      <% end %>
    </div>

    <%= paginate @places %>
  </div>


  <div class="four wide column">
    <div class="ui segment">
      <div class="ui menu vertical">
        <div class="item"><%= link_to '申请为供应商', new_my_place_path(place_taxon_id: params[:place_taxon_id]), class: 'ui mini primary button' %></div>
      </div>
    </div>
  </div>
</div>

