<div class="box">
  <%= render 'filter' %>
</div>

<div class="columns">
  <div class="column">
    <div class="">
      <% @places.each do |place| %>
        <div class="media" style="width: 800px;">
          <div class="media-left">
          </div>
          <div class="media-content">
            <%= link_to place.name, place_path(place) %>
            <p><%= place.description %></p>
          </div>
          <div class="media-right">
            <%= link_to '加入购物车', my_trade_items_path(good_id: place.id, good_type: place.class_name), method: :post, class: 'button' %>
          </div>
        </div>
      <% end %>
    </div>

    <%= paginate @places %>
  </div>


  <div class="column is-narrow">
    <div class="ui segment">
      <div class="ui menu vertical">
        <div class="item"><%= link_to '申请为供应商', new_my_place_path(place_taxon_id: params[:place_taxon_id]), class: 'button is-link is-small' %></div>
      </div>
    </div>
  </div>
</div>

