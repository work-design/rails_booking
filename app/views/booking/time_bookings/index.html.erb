<div class="ui top attached borderless menu">
  <div class="header item">Booking Time Bookings</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Booking Time Booking', new_time_booking_path(params[:booking_type], params[:booking_id]), class: 'ui teal button', remote: true %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= TimeBooking.human_attribute_name(:id) %></th>
      <th><%= TimeBooking.human_attribute_name(:time_list_id) %></th>
      <th><%= TimeBooking.human_attribute_name(:time_item_id) %></th>
      <th><%= TimeBooking.human_attribute_name(:room_id) %></th>
      <th><%= TimeBooking.human_attribute_name(:booking_on) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @time_bookings.each do |time_booking| %>
    <tr>
      <td><%= time_booking.id %></td>
      <td><%= time_booking.time_list_id %></td>
      <td><%= time_booking.time_item_id %></td>
      <td><%= time_booking.room_id %></td>
      <td><%= time_booking.booking_on %></td>
      <td class="ui labels">
        <%= link_to edit_time_booking_path(params[:booking_type], params[:booking_id], time_booking), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to time_booking_path(params[:booking_type], params[:booking_id], time_booking), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @time_bookings %>
