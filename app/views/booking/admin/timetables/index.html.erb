<div class="ui top attached borderless menu">
  <div class="header item">Booking Admin Timetables</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Booking Admin Timetable', new_admin_timetable_path, class: 'ui teal button', remote: true %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= Timetable.human_attribute_name(:id) %></th>
      <th><%= Timetable.human_attribute_name(:kind) %></th>
      <th><%= Timetable.human_attribute_name(:start_at) %></th>
      <th><%= Timetable.human_attribute_name(:finish_at) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @timetables.each do |timetable| %>
    <tr>
      <td><%= timetable.id %></td>
      <td><%= timetable.kind %></td>
      <td><%= timetable.start_at %></td>
      <td><%= timetable.finish_at %></td>
      <td class="ui labels">
        <%= link_to admin_timetable_path(timetable), data: { tooltip: t('.show') }, class: 'ui blue mini icon button', remote: true do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_timetable_path(timetable), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_timetable_path(timetable), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @timetables %>
