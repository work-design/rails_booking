<table class="ui basic table">
  <tbody>
  <% time_list.time_items.each do |time_item| %>
    <tr>
      <td><%= time_item.start_at.to_s(:time) %></td>
      <td><%= time_item.finish_at.to_s(:time) %></td>
      <td class="ui labels">
        <%= link_to edit_admin_time_list_time_item_path(time_list, time_item), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_time_list_time_item_path(time_list, time_item), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td>
        <%= link_to 'add', new_admin_time_list_time_item_path(time_list), class: 'ui teal button', remote: true %>
      </td>
    </tr>
  </tfoot>
</table>
