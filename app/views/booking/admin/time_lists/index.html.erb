<div class="ui top attached borderless menu">
  <div class="header item">Booking Admin Time Lists</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New Booking Admin Time List', new_admin_time_list_path, class: 'ui teal button', remote: true %>
    </div>
  </div>
</div>

<%= render 'filter' %>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= TimeList.human_attribute_name(:id) %></th>
      <th>
        <%= TimeList.human_attribute_name(:name) %>(<%= TimeList.human_attribute_name(:code) %>)
      </th>
      <th>
        <p><%= TimeList.human_attribute_name(:item_minutes) %></p>
        <p><%= TimeList.human_attribute_name(:interval_minutes) %></p>
      </th>
      <th><%= TimeList.human_attribute_name(:time_items) %></th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @time_lists.each do |time_list| %>
    <tr>
      <td><%= time_list.id %></td>
      <td><%= time_list.name %>(<%= time_list.code %>)</td>
      <td>
        <p><%= time_list.item_minutes %></p>
        <p><%= time_list.interval_minutes %></p>
      </td>
      <td>
        <%= render partial: 'time_items', locals: { time_list: time_list } %>
      </td>
      <td class="ui labels">
        <%= link_to admin_time_list_time_items_path(time_list), data: { tooltip: t('.show') }, class: 'ui blue mini icon button' do %>
          <i class="location arrow icon"></i>
        <% end %>
        <%= link_to edit_admin_time_list_path(time_list), data: { tooltip: t('.edit') }, class: 'ui pink mini icon button', remote: true do %>
          <i class="pencil alternate icon"></i>
        <% end %>
        <%= link_to admin_time_list_path(time_list), method: :delete, data: { tooltip: t('.destroy'), confirm: 'Are you sure?' }, class: 'ui red mini icon button' do %>
          <i class="times icon"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @time_lists %>
