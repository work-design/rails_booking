<div class="<%= active_helper(modules: 'event/admin', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu">
  <%= content_tag :div, class: 'menu-list' do %>
    <%= link_to t('eventual.admin.time_lists.index.title'), admin_time_lists_path, class: active_helper(controllers: ['time_lists'], active: 'is-active') %>
    <%= link_to t('eventual.admin.places.index.title'), admin_places_path, class: active_helper(controllers: ['places', 'place_taxons'], active: 'is-active') %>
